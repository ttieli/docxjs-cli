{
  "name": "docxjs-cli",
  "version": "1.3.21",
  "main": "electron/main.js",
  "description": "Markdown to Docx converter with Chinese Official Document Style support",
  "bin": {
    "docxjs": "./bin/cli.js",
    "docxjs-web": "./bin/docxjs-web.js",
    "docxjs-capture": "./bin/capture.js"
  },
  "files": [
    "docxjs-cli.js",
    "style_extractor.py",
    "bin",
    "lib",
    "server",
    "public",
    "templates"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server/app.js",
    "start:electron": "electron electron/main.js",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "docx",
    "markdown",
    "converter",
    "cli"
  ],
  "author": "Your Name",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.13.2",
    "docx": "^9.1.0",
    "docx-preview": "^0.3.7",
    "express": "^5.2.1",
    "html2canvas": "^1.4.1",
    "image-size": "^2.0.2",
    "inquirer": "^8.2.5",
    "jspdf": "^3.0.4",
    "katex": "^0.16.27",
    "mammoth": "^1.11.0",
    "markdown-it": "^14.1.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-sub": "^2.0.0",
    "markdown-it-sup": "^2.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "markdown-it-texmath": "^1.0.0",
    "mermaid": "^11.12.2",
    "multer": "^2.0.2",
    "playwright": "^1.46.1",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "yargs": "^17.7.2"
  },
  "build": {
    "appId": "com.docxjs.cli",
    "productName": "DocxJS Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "package.json",
      "lib/**/*",
      "server/**/*",
      "public/**/*",
      "templates/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "bin/",
        "to": "bin/",
        "filter": [
          "style_extractor*",
          "!**/*.js"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^26.0.12"
  }
}
